<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- AppHeader demo -->
  <bean id="Demo-AppHeader-View" parent="ComponentLibraryView">
    <property name="xmlFilePath" value="/org/kuali/rice/krad/demo/uif/library/DemoAppHeader.xml"/>
    <property name="javaFullClassPath" value="org.kuali.rice.krad.uif.element.ApplicationHeader"/>
    <property name="docBookAnchor" value="d6813e6638"/>
    <property name="demoGroups">
      <list>
        <ref bean="Demo-AppHeader-Example1"/>
      </list>
    </property>
  </bean>

  <bean id="Demo-AppHeader-Example1" parent="Uif-VerticalBoxSection" p:headerText="Default">
    <property name="items">
      <list>
        <bean parent="Uif-Link" p:linkText="Default Application Header"
              p:href="@{#ConfigProperties['krad.url']}/uicomponents?viewId=Demo-AppHeader-View1"
              p:target="_blank"/>
      </list>
    </property>
  </bean>

  <bean id="Demo-AppHeader-View1" parent="Uif-FormView">
    <property name="headerText" value="Default Application Header"/>
    <!-- ex:Demo-AppHeader-Example1 start-->
    <!-- Note: The application header can be set globally by overriding the bean Uif-GlobalApplicationHeader -->
    <property name="applicationHeader">
      <bean parent="Uif-ApplicationHeaderBase">
        <property name="applicationNavigation.brandImage">
          <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/images/logo.png"/>
        </property>

        <property name="applicationNavigation.items">
          <list>
            <bean parent="Uif-DropdownToggleMenu" p:toggleText="RESEARCHER" p:renderToggleCaret="false">
              <property name="menuGroup">
                <bean parent="Uif-AppMenuGroup" p:layoutManager.defaultItemColSpan="6">
                  <property name="items">
                    <list>
                       <bean parent="Demo-Menu-ResearcherC1"/>
                       <bean parent="Demo-Menu-ResearcherC2"/>
                    </list>
                  </property>
                </bean>
              </property>
            </bean>

            <bean parent="Uif-DropdownToggleMenu" p:toggleText="UNIT" p:renderToggleCaret="false"/>
            <bean parent="Uif-DropdownToggleMenu" p:toggleText="CENTRAL ADMIN" p:renderToggleCaret="false"/>
            <bean parent="Uif-DropdownToggleMenu" p:toggleText="MAINTENANCE" p:renderToggleCaret="false"/>
            <bean parent="Uif-DropdownToggleMenu" p:toggleText="SYSTEM ADMIN" p:renderToggleCaret="false"/>
          </list>
        </property>

        <property name="applicationToolbar.items">
          <list>
            <bean parent="Uif-ListGroup" p:layoutManager.additionalCssClasses="nav,pull-right">
              <property name="items">
                <list>
                  <bean parent="Uif-DropdownToggleMenu" p:toggleText="Action list"
                        p:additionalCssClasses="pull-right">
                    <property name="menuItems">
                      <list>
                        <bean parent="Uif-MenuAction"
                              p:actionUrl.viewId="Lab-BootstrapComponents" p:actionUrl.controllerMapping="/labs"
                              p:actionLabel="Approve: Doc #5547"/>

                        <bean parent="Uif-MenuAction"
                              p:actionUrl.viewId="Lab-BootstrapComponents" p:actionUrl.controllerMapping="/labs"
                              p:actionLabel="Approve: Doc #5548"/>
                      </list>
                    </property>
                  </bean>

                  <bean parent="Uif-DropdownToggleMenu" p:toggleText="Doc Search" p:renderToggleCaret="false"
                        p:additionalCssClasses="pull-right"/>

                  <bean parent="Uif-DropdownToggleMenu" p:toggleText="User thclark"
                        p:additionalCssClasses="pull-right">
                    <property name="menuItems">
                      <list>
                        <bean parent="Uif-MenuAction"
                              p:actionUrl.viewId="Lab-BootstrapComponents" p:actionUrl.controllerMapping="/labs"
                              p:actionLabel="Preferences"/>

                        <bean parent="Uif-MenuAction"
                              p:actionUrl.viewId="Lab-BootstrapComponents" p:actionUrl.controllerMapping="/labs"
                              p:actionLabel="Logout"/>
                      </list>
                    </property>
                  </bean>
                </list>
              </property>
            </bean>
          </list>
        </property>
      </bean>
    </property>
    <!-- ex:Demo-AppHeader-Example1 end-->
    <property name="items">
      <list>
        <bean parent="Uif-Page">
        </bean>
      </list>
    </property>
  </bean>

  <!-- ex:Demo-AppHeader-Example1 start-->
  <bean id="Demo-Menu-ResearcherC1" parent="Uif-SimpleGroup">
    <property name="items">
      <list>
        <bean parent="Uif-MenuList" p:headerText="Proposals">
          <property name="items">
            <list>
              <bean parent="Uif-Link" p:href="#" p:linkText="Create Proposal"/>
              <bean parent="Uif-Link" p:href="#" p:linkText="Proposals Enroute"/>
              <bean parent="Uif-Link" p:href="#" p:linkText="All My Proposals"/>
              <bean parent="Uif-SimpleHeaderFour" p:headerText="Lists"/>
              <bean parent="Uif-Link" p:href="#" p:linkText="Search Proposals"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="Demo-Menu-ResearcherC2" parent="Uif-SimpleGroup">
    <property name="items">
      <list>
        <bean parent="Uif-MenuList" p:headerText="IRB Protocols">
          <property name="items">
            <list>
              <bean parent="Uif-SimpleHeaderFour" p:headerText="Actions"/>
              <bean parent="Uif-Link" p:href="#" p:linkText="Create IRB Protocol"/>
              <bean parent="Uif-Link" p:href="#" p:linkText="Amend or Renew IRB Protocol"/>
              <bean parent="Uif-SimpleHeaderFour" p:headerText="Lists"/>
              <bean parent="Uif-Link" p:href="#" p:linkText="Pending Protocols"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  <!-- ex:Demo-AppHeader-Example1 end-->

</beans>